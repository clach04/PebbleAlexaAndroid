<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sdsoft.pebblealexa.Main">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtLast3"
        android:layout_alignBottom="@+id/txtLast3"
        android:layout_alignParentStart="true"
        android:text="3." />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtLast4"
        android:layout_alignBottom="@+id/txtLast4"
        android:layout_alignParentStart="true"
        android:text="4." />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtLast1"
        android:layout_alignBottom="@+id/txtLast1"
        android:layout_alignParentStart="true"
        android:text="1." />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtLast2"
        android:layout_alignBottom="@+id/txtLast2"
        android:layout_alignParentStart="true"
        android:text="2." />

    <EditText
        android:id="@+id/txtLast1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:ems="10"
        android:inputType="text"
        android:text="What time is it?"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtLast2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/txtLast1"
        android:layout_below="@+id/txtLast1"
        android:ems="10"
        android:inputType="text"
        android:text="What is the weather?" />

    <EditText
        android:id="@+id/txtLast3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtLast2"
        android:ems="10"
        android:inputType="text"
        android:text="What is my flash briefing?"
        android:layout_alignStart="@+id/txtLast2" />

    <EditText
        android:id="@+id/txtLast4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/txtLast1"
        android:layout_below="@+id/txtLast3"
        android:ems="10"
        android:inputType="text"
        android:text="Tell me a joke." />

    <EditText
        android:id="@+id/txtLast5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/txtLast4"
        android:layout_below="@+id/txtLast4"
        android:ems="10"
        android:inputType="text"
        android:text="Set volume to 10." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtLast5"
        android:layout_alignBottom="@+id/txtLast5"
        android:layout_alignParentStart="true"
        android:text="5." />

    <TextView
        android:text="This application uses the following open source libraries.\n* willblaschko.android.alexa:AlexaAndroid\n* com.writingminds:FFmpegAndroid\n* cmusphinx/pocketsphinx"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtInfo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Favorites" />

</RelativeLayout>
